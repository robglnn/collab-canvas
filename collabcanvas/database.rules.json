{
  "rules": {
    "cursors": {
      "$canvasId": {
        ".read": true,
        "$userId": {
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "presence": {
      "$canvasId": {
        ".read": true,
        "$userId": {
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "tempUpdates": {
      "$canvasId": {
        ".read": true,
        ".write": "auth != null"
      }
    }
  }
}

